<nav class="mb-2" aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="#!">Tickets</a></li>
        <li class="breadcrumb-item active">View</li>
    </ol>
</nav>

<div class="mb-9">
    <div class="row g-3 mb-4">
        <div class="col-auto">
            <h2 class="mb-0">Ticket Details</h2>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card h-100">
            <div class="card-body pb-3">
                <div class="row gx-3">

                    <!-- Ticket ID -->
                    <div class="col-12 col-sm-6 col-xl-6 mb-4">
                        <div class="d-flex align-items-center mb-1">
                            <h5 class="text-body-highlight mb-0">Ticket </h5>
                        </div>
                        <p class="text-body-secondary"><%= ticket.ticketCode %></p>
                    </div>

                    <!-- Subject -->
                    <div class="col-12 col-sm-6 col-xl-6 mb-4">
                        <div class="d-flex align-items-center mb-1">
                            <h5 class="text-body-highlight mb-0">Subject</h5>
                        </div>
                        <p class="text-body-secondary"><%= ticket.subject %></p>
                    </div>

                    <!-- Status -->
                    <div class="col-12 col-sm-6 col-xl-6 mb-4">
                        <div class="d-flex align-items-center mb-1">
                            <h5 class="text-body-highlight mb-0">Status</h5>
                        </div>
                        <select id="ticket-status" class="form-control" onchange="updateTicketStatus('<%= ticket._id %>')">
                            <option value="open" <%= ticket.status === 'open' ? 'selected' : '' %>>Open</option>
                            <option value="in-progress" <%= ticket.status === 'in-progress' ? 'selected' : '' %>>In Progress</option>
                            <option value="resolved" <%= ticket.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                        </select>
                        <div id="status-message" class="mt-3"></div> <!-- For success/error messages -->
                    </div>

                    <!-- Priority -->
                    <div class="col-12 col-sm-6 col-xl-6 mb-4">
                        <div class="d-flex align-items-center mb-1">
                            <h5 class="text-body-highlight mb-0">Priority</h5>
                        </div>
                        <p class="text-body-secondary"><%= ticket.priority.charAt(0).toUpperCase() + ticket.priority.slice(1) %></p>
                    </div>

                    <!-- Created Date -->
                    <div class="col-12 col-sm-6 col-xl-6 mb-4">
                        <div class="d-flex align-items-center mb-1">
                            <h5 class="text-body-highlight mb-0">Created</h5>
                        </div>
                        <p class="text-body-secondary"><%= ticket.createdAt.toLocaleDateString() %></p>
                    </div>

                    <div class="col-12 col-sm-12 col-xl-12 mb-4">
                        <div class="d-flex align-items-center mb-1">
                            <h5 class="text-body-highlight mb-0">Comments</h5>
                        </div>
                    
                        <!-- Display Existing Comments -->
                        <% if (ticket.comments.length > 0) { %>
                            <!-- Show only first 2 comments initially -->
                            <% const visibleComments = ticket.comments.slice(0, 2); %>
                            <% visibleComments.forEach(comment => { %>
                                <div class="border rounded p-3 mb-3 comment-item">
                                    <div class="d-flex justify-content-between">
                                        <strong><%= comment.commenterId.name %></strong>
                                        <small class="text-muted"><%= comment.createdAt.toLocaleDateString() %></small>
                                    </div>
                                    <p><%= comment.commentText %></p>
                                </div>
                            <% }) %>
                    
                            <!-- Show a "Read More" link if there are more comments -->
                            <% if (ticket.comments.length > 2) { %>
                                <button class="btn btn-link" id="readMoreBtn">Read More</button>
                            <% } %>
                    
                            <!-- Hidden comments that will be revealed -->
                            <div id="hiddenComments" style="display: none;">
                                <% ticket.comments.slice(2).forEach(comment => { %>
                                    <div class="border rounded p-3 mb-3 comment-item">
                                        <div class="d-flex justify-content-between">
                                            <strong><%= comment.commenterId.name %></strong>
                                            <small class="text-muted"><%= comment.createdAt.toLocaleDateString() %></small>
                                        </div>
                                        <p><%= comment.commentText %></p>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p>No comments yet.</p>
                        <% } %>
                    
                        <!-- Add New Comment -->
                        <form action="/tickets/<%= ticket._id %>/comment" method="POST">
                            <div class="mb-3">
                                <textarea class="form-control" name="commentText" rows="4" placeholder="Add a comment..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit Comment</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('readMoreBtn')?.addEventListener('click', function() {
        const hiddenComments = document.getElementById('hiddenComments');
        hiddenComments.style.display = hiddenComments.style.display === 'none' ? 'block' : 'none';
        this.textContent = hiddenComments.style.display === 'none' ? 'Read More' : 'Read Less';
    });

    function updateTicketStatus(ticketId) {
    const status = document.getElementById('ticket-status').value;

    fetch(`/tickets/${ticketId}/update-status`, {
        method: 'POST',
        headers: {
                'Content-Type': 'application/json'
            },
        body: JSON.stringify({ status })
    })
    .then(response => response.json())
    .then(data => {
        const messageDiv = document.getElementById('status-message');
        if (data.success) {
            messageDiv.innerHTML = `<p class="text-success">${data.message}</p>`;
        } else {
            messageDiv.innerHTML = `<p class="text-danger">${data.message}</p>`;
        }
    })
    .catch(error => {
        console.error('Error updating status:', error);
    });
}

</script>